<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:ui="clr-namespace:Dwares.Druid.UI;assembly=Druid"
			 x:Class="ACE.Views.PickupDetailPage"
			 Title="Pickup Details"
			 >


	<ContentPage.ToolbarItems>
		<ToolbarItem Order="Primary"
					 Text="Accept" 
					 Command="{Binding AcceptCommand}"
					 >
			<ToolbarItem.Icon>
				<OnPlatform x:TypeArguments="FileImageSource">
					<On Platform="iOS" Value="accept.png" />
					<On Platform="Android" Value="ic_action_accept.png" />
					<On Platform="UWP" Value="Images/e10b.png" />
				</OnPlatform>
			</ToolbarItem.Icon>
		</ToolbarItem>
		<ToolbarItem Order="Primary"
					 Text="Cancel" 
					 Command="{Binding CancelCommand}"
					>
			<ToolbarItem.Icon>
				<OnPlatform x:TypeArguments="FileImageSource">
					<On Platform="iOS" Value="cancel.png" />
					<On Platform="Android" Value="ic_action_cancel.png" />
					<On Platform="UWP" Value="Images/e10a.png" />
				</OnPlatform>
			</ToolbarItem.Icon>
		</ToolbarItem>
	</ContentPage.ToolbarItems>

	<ContentPage.Content>
		<StackLayout Orientation="Vertical" 
					 Margin="8"
					 >
			<StackLayout Orientation="Horizontal">
				<Label Text="At:"
					   FontAttributes="Bold"
					   VerticalOptions="Center"
					   />
				<TimePicker x:Name="pickupTime"
							Time="{Binding PickupTime}"
							/>
			</StackLayout>
			<Label Text="Name"/>
			<!--<Entry x:Name="name"
				   Placeholder="Enter Client Name"
				   Text="{Binding ClientName}"
				   />-->
			<ui:AutoSuggestEntry x:Name="name"
								Placeholder="Enter Client Name"
								Text="{Binding ClientName}"
								SuggestionSource="{Binding ClientNameSuggestions}"
								/>

			<Label Text="Phone Number"/>
			<!--<Entry x:Name="phone"
				   Placeholder="Enter Client Phone Number"
				   Text="{Binding ClientPhone}"
				   Keyboard="Telephone"
				   />-->
			<ui:AutoSuggestEntry x:Name="phone"
								Placeholder="Enter Client Phone Number"
								Text="{Binding ClientPhone}"
								SuggestionSource="{Binding ClientPhoneSuggestions}"
								/>


			<Label Text="Address"/>
			<Entry x:Name="address"
				   Placeholder="Enter Client Address"
				   Text="{Binding ClientAddress}"
				   />

			<Label Text=""/>

			<StackLayout Orientation="Horizontal">
				<Label Text="To:"
					   FontAttributes="Bold"
					   VerticalOptions="Center"
					   />
				<TimePicker x:Name="AppoitmentTime"
							Time="{Binding AppoitmentTime}"
							/>
			</StackLayout>
			<!--<Entry x:Name="officeName"
				   Placeholder="Enter Office Name"
				   Text="{Binding OfficeName}"
				   />-->
			<ui:AutoSuggestEntry x:Name="officeName"
								Placeholder="Enter Office Name"
								Text="{Binding OfficeName}"
								SuggestionSource="{Binding OfficeNameSuggestions}"
								/>

			<!--<Entry x:Name="officePhone"
				   Placeholder="Enter Office Phone"
				   Text="{Binding OfficePhone}"
				   />-->
			<ui:AutoSuggestEntry x:Name="officePhone"
								Placeholder="Enter Office Phone Number"
								Text="{Binding OfficePhone}"
								SuggestionSource="{Binding OfficePhoneSuggestions}"
								/>

			<Entry x:Name="officeAddress"
				   Placeholder="Enter Office Address"
				   Text="{Binding OfficeAddress}"
				   />
		</StackLayout>
	</ContentPage.Content>


